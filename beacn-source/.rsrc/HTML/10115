<Button xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
		UseSystemFocusVisuals="False"
		>
  <Button.Resources>
    <ResourceDictionary>
      <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#BFBFBF" Opacity="0.6"/>
      <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="LightGray"/>
      <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="DarkGray"/>
      <SolidColorBrush x:Key="ButtonBackground" Color="#E1E1E1"/>
