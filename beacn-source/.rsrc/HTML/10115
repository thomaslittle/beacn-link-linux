      <SolidColorBrush x:Key="ButtonBorderBrush" Color="#ADADAD"/>
      <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#0078D7"/>
      <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#0078D7"/>
	  
      <Thickness x:Key="ButtonBorderThemeThickness">1</Thickness>	  
