			<!-- State to manualy set into after pointer exit since there are some issues with focus state drawing, most of the time the button goes focused > pointerover > normal (instead of "focused")  
			     To be specified the same as Focused
			-->
			<VisualState x:Name="Focused2">
              <Storyboard>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="BorderBrush">
                  <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushPointerOver}" />
